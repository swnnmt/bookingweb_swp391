<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>loginGoogleHandler</servlet-name>
        <servlet-class>controler.loginGoogleHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>controler.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sign_up</servlet-name>
        <servlet-class>controler.sign_up</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>confirm_signup</servlet-name>
        <servlet-class>controler.confirm_signup</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginGoogleHandler</servlet-name>
        <url-pattern>/loginGoogleHandler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sign_up</servlet-name>
        <url-pattern>/sign_up</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>confirm_signup</servlet-name>
        <url-pattern>/confirm_signup</url-pattern>
    </servlet-mapping>
</web-app>
